<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F0F0F0"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout style="@style/Layout_style">

                    <ImageView
                        android:id="@+id/img_1"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/declaration_number" />

                    <TextView
                        android:id="@+id/tv_1"
                        style="@style/TextView_style_relayout"
                        android:layout_toRightOf="@+id/img_1"
                        android:drawableRight="@drawable/required"
                        android:text="检疫证编号" />

                    <EditText
                        android:id="@+id/et_quarantine_no"
                        style="@style/EditText_style_relayout"
                        android:layout_toRightOf="@+id/tv_1"
                        android:hint="请输入检疫证编号" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:background="#d8d8d8" />

                <RelativeLayout style="@style/Layout_style">

                    <ImageView
                        android:id="@+id/img_2"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/declarer" />

                    <TextView
                        android:id="@+id/tv_2"
                        style="@style/TextView_style_relayout"
                        android:layout_toRightOf="@+id/img_2"
                        android:drawableRight="@drawable/required"
                        android:text="货主" />


                    <EditText
                        android:id="@+id/et_user_name"
                        style="@style/EditText_style_relayout"
                        android:layout_marginLeft="70dp"
                        android:layout_toRightOf="@+id/tv_2"
                        android:hint="请输入货主姓名" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:background="#d8d8d8" />

                <RelativeLayout
                    android:id="@+id/ll_anim_animtype"
                    style="@style/Layout_style"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <ImageView
                        android:id="@+id/img_7"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/animal_species" />

                    <TextView
                        android:id="@+id/textView2"
                        style="@style/TextView_style_relayout"
                        android:layout_toRightOf="@+id/img_7"
                        android:drawableRight="@drawable/required"
                        android:text="产品名称" />

                    <EditText
                        android:id="@+id/et_product_name"
                        style="@style/EditText_style_relayout"
                        android:layout_marginLeft="44dp"
                        android:layout_toRightOf="@+id/textView2"
                        android:hint="请输入产品名称" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:background="#d8d8d8" />

                <RelativeLayout
                    style="@style/Layout_style"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <ImageView
                        android:id="@+id/img_8"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/quantity_unit" />

                    <TextView
                        android:id="@+id/tv_6"
                        style="@style/TextView_style_relayout"
                        android:layout_toRightOf="@+id/img_8"
                        android:drawableRight="@drawable/required"
                        android:text="数量" />


                    <EditText
                        android:id="@+id/et_anim_count"
                        style="@style/EditText_style_relayout"
                        android:layout_alignParentRight="false"
                        android:layout_marginLeft="76dp"
                        android:layout_toLeftOf="@+id/tv_danwei"
                        android:layout_toRightOf="@+id/tv_6"
                        android:hint="请输入数量"
                        android:inputType="number"
                        android:maxLength="5" />

                    <TextView
                        android:id="@+id/tv_danwei"
                        style="@style/TextView_style_relayout"
                        android:layout_alignBaseline="@+id/et_anim_count"
                        android:layout_alignBottom="@+id/et_anim_count"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@+id/iv_unit_show"
                        android:layout_toStartOf="@+id/iv_unit_show"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/drop_down_drawable"
                        android:gravity="right|center"
                        android:text="头" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:background="#d8d8d8" />

                <RelativeLayout style="@style/Layout_style">

                    <ImageView
                        android:id="@+id/img_3"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/origin" />

                    <TextView
                        android:id="@+id/tv_3"
                        style="@style/TextView_style_relayout"
                        android:layout_toRightOf="@+id/img_3"
                        android:text="产地" />

                    <EditText
                        android:id="@+id/et_product_area"
                        style="@style/EditText_style_relayout"
                        android:layout_marginLeft="70dp"
                        android:layout_toRightOf="@+id/tv_3" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:background="#d8d8d8" />

                <RelativeLayout style="@style/Layout_style">

                    <ImageView
                        android:id="@+id/img_4"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/examine_approve" />

                    <TextView
                        android:id="@+id/tv_4"
                        style="@style/TextView_style_relayout"
                        android:layout_toRightOf="@+id/img_4"
                        android:text="检疫标志号" />


                    <EditText
                        android:id="@+id/et_quarantine_flag_no"
                        style="@style/EditText_style_relayout"
                        android:layout_toRightOf="@+id/tv_4" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:background="#d8d8d8" />

                <RelativeLayout style="@style/Layout_style">

                    <ImageView
                        android:id="@+id/img_5"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/origin" />

                    <TextView
                        android:id="@+id/tv_5"
                        style="@style/TextView_style_relayout"
                        android:layout_toRightOf="@+id/img_5"
                        android:text="生产单位\n名称地址" />


                    <EditText
                        android:id="@+id/et_start_place"
                        style="@style/EditText_style_relayout"
                        android:layout_marginLeft="50dp"
                        android:layout_toRightOf="@+id/tv_5"
                        android:focusable="false" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:background="#d8d8d8" />

                <RelativeLayout style="@style/Layout_style">

                    <ImageView
                        android:id="@+id/img_6"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/class2" />

                    <TextView
                        android:id="@+id/tv_61"
                        style="@style/TextView_style_relayout"
                        android:layout_toRightOf="@+id/img_6"
                        android:text="目的地" />


                    <EditText
                        android:id="@+id/et_end_place"
                        style="@style/EditText_style_relayout"
                        android:layout_marginLeft="70dp"
                        android:layout_toRightOf="@+id/tv_61"
                        android:focusable="false" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:background="#d8d8d8" />

                <RelativeLayout style="@style/Layout_style">

                    <ImageView
                        android:id="@+id/img_71"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/remark" />

                    <TextView
                        android:id="@+id/tv_7"
                        style="@style/TextView_style_relayout"
                        android:layout_toRightOf="@+id/img_71"
                        android:text="备注" />


                    <EditText
                        android:id="@+id/et_remark"
                        style="@style/EditText_style_relayout"
                        android:layout_marginLeft="70dp"
                        android:layout_toRightOf="@+id/tv_7"
                        android:maxLines="10"
                        android:singleLine="false" />


                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:background="#ffffff"
                android:padding="18dp"
                android:paddingBottom="19dp"
                android:paddingLeft="20dp"
                android:paddingTop="16dp"
                android:text="　　本批动物经检疫合格,应于本日内到达有效。"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:orientation="vertical">

                <RelativeLayout style="@style/Layout_style">

                    <ImageView
                        android:id="@+id/img_9"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/veterinarian" />

                    <TextView
                        android:id="@+id/textView14"
                        style="@style/TextView_style_relayout"
                        android:layout_toRightOf="@+id/img_9"
                        android:drawableRight="@drawable/required"
                        android:text="官方兽医签字" />


                    <EditText
                        android:id="@+id/et_signature_checked"
                        style="@style/EditText_style_relayout"
                        android:layout_toRightOf="@+id/textView14"
                        android:focusable="false" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:background="#d8d8d8" />

                <RelativeLayout style="@style/Layout_style">

                    <ImageView
                        android:id="@+id/img_10"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/handling_time" />

                    <TextView
                        android:id="@+id/textView16"
                        style="@style/TextView_style_relayout"
                        android:layout_toRightOf="@+id/img_10"
                        android:text="签发日期" />


                    <EditText
                        android:id="@+id/et_prove_time"
                        style="@style/EditText_style_relayout"
                        android:layout_toRightOf="@+id/textView16"
                        android:focusable="false" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:background="#d8d8d8" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/img_18"
                    android:text="带"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/img_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/tv_17"
                    android:background="@drawable/required" />

                <TextView
                    android:id="@+id/tv_17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="14dp"
                    android:text="为必填项"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/bt_print"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="31dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="51dp"
                android:background="@drawable/button_style"
                android:gravity="center"
                android:text="打印"
                android:textColor="#fffefe"
                android:textSize="@dimen/common_text_size" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
