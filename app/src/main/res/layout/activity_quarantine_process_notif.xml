                    android:focusable="false"
                    />


            </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:background="#d8d8d8" />
                <RelativeLayout
                    style="@style/Layout_style"
                    >

                    <ImageView
