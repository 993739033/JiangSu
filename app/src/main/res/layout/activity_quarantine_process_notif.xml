                        android:id="@+id/tv_13"
                        android:layout_toRightOf="@+id/img_13"
                        android:text="备注"
                        />

                    <EditText
                        style="@style/EditText_style_relayout"
                        android:id="@+id/tv_process_declare3"
                        android:layout_toRightOf="@+id/tv_13"
                        android:layout_marginLeft="8dp"
                        android:gravity="center"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:background="#d8d8d8" />
                <RelativeLayout style="@style/Layout_style">

                    <TextView
                        android:id="@+id/tv_spinner3_1"
                        android:layout_marginLeft="26dp"
                        style="@style/TextView_style_relayout"
                        android:layout_alignParentLeft="true"
                        android:drawablePadding="30dp"
                        android:drawableRight="@drawable/drop_down_drawable"
                        android:text="请选择"
                        />
