                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:background="#d8d8d8" />
                <RelativeLayout style="@style/Layout_style">

                    <TextView
                        android:id="@+id/tv_spinner2_1"
                        android:layout_marginLeft="26dp"
                        style="@style/TextView_style_relayout"
                        android:layout_alignParentLeft="true"
                        android:drawablePadding="30dp"
                        android:drawableRight="@drawable/drop_down_drawable"
                        android:text="请选择"
                        />
                    <TextView
                        android:layout_toRightOf="@+id/tv_spinner2_1"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/tv_spinner2_2"
                        android:layout_marginRight="26dp"
                        style="@style/TextView_style_relayout"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="30dp"
                        android:drawableRight="@drawable/drop_down_drawable"
