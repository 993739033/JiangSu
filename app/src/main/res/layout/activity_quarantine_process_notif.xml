                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:background="#d8d8d8" />
            </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="29dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout style="@style/Layout_style">

                <ImageView
                    style="@style/Image_style_relayout"
                    android:id="@+id/img_17"
                    android:src="@drawable/declarer" />

                <TextView
                    style="@style/TextView_style_relayout"
                    android:id="@+id/tv_17"
                    android:layout_toRightOf="@+id/img_17"
                    android:text="当事人姓名"
                    />

                <EditText
                    style="@style/EditText_style_relayout"
                    android:id="@+id/et_party_name"
                    android:layout_marginLeft="30dp"
                    android:hint="请输入当事人姓名"
                    android:imeOptions="actionNext"
                    android:nextFocusForward="@+id/et_veterinarian_name"
                    android:layout_toRightOf="@+id/tv_17"
                    android:gravity="center"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="#d8d8d8" />
            <RelativeLayout style="@style/Layout_style">

                <ImageView
                    style="@style/Image_style_relayout"
                    android:id="@+id/img_18"
                    android:src="@drawable/contact_way" />

                <TextView
                    style="@style/TextView_style_relayout"
                    android:id="@+id/tv_18"
                    android:layout_toRightOf="@+id/img_18"
                    android:text="电话"
                    />

                <EditText
                    style="@style/EditText_style_relayout"
                    android:id="@+id/et_party_phone"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="11"
                    android:nextFocusForward="@+id/et_party_phone"
                    android:layout_marginLeft="76dp"
                    android:hint="请输入当事人电话"
                    android:layout_toRightOf="@+id/tv_18"
                    android:gravity="center"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="#d8d8d8" />
            <RelativeLayout style="@style/Layout_style">

                <ImageView
                    style="@style/Image_style_relayout"
                    android:id="@+id/img_19"
                    android:src="@drawable/declarer" />

                <TextView
                    style="@style/TextView_style_relayout"
                    android:id="@+id/tv_19"
                    android:layout_toRightOf="@+id/img_19"
                    android:text="官方兽医姓名"
                    />

                <EditText
                    style="@style/EditText_style_relayout"
                    android:id="@+id/et_veterinarian_name"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="11"
                    android:focusable="false"
                    android:nextFocusForward="@+id/et_party_phone"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv_19"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="#d8d8d8" />
            <RelativeLayout style="@style/Layout_style">

                <ImageView
                    style="@style/Image_style_relayout"
                    android:id="@+id/img_20"
                    android:src="@drawable/declarer" />

                <TextView
                    style="@style/TextView_style_relayout"
                    android:id="@+id/tv_20"
                    android:layout_toRightOf="@+id/img_20"
                    android:text="动物卫生监督\n所电话"
                    />

                <EditText
                    style="@style/EditText_style_relayout"
                    android:id="@+id/et_supervision_phone"
                    android:inputType="number"
                    android:maxLength="11"
                    android:layout_marginLeft="20dp"
                    android:hint="请输入卫生监督所电话"
                    android:layout_toRightOf="@+id/tv_20"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="#d8d8d8" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
               >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/img_46"
                    android:text="带"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/img_46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/tv_46"
                    android:background="@drawable/required" />

                <TextView
                    android:id="@+id/tv_46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="14dp"
                    android:text="为必填项"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </RelativeLayout>
            <Button
                android:id="@+id/bt_print"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:gravity="center"
                android:text="保存"
                android:textColor="#ffffff"
                android:background="@drawable/button_style"
                android:textSize="@dimen/common_text_size" />
