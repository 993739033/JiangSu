<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Layout_style"
    android:padding="0dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">
    <LinearLayout
        style="@style/Layout_style"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:id="@+id/checkbox"
            android:button="@drawable/check_box_select"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <LinearLayout
        style="@style/Layout_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="0dp"
        >

        <LinearLayout
            style="@style/Layout_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <TextView
                style="@style/TextView_style"
                android:text="编号" />

            <TextView
                android:id="@+id/tv_serialNumber"
                style="@style/TextView_style"
                android:layout_marginLeft="60dp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_marginRight="18dp"
            android:layout_marginLeft="18dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d8d8d8" />

        <LinearLayout
            style="@style/Layout_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <TextView
                style="@style/TextView_style"
                android:text="起运时间" />

            <TextView
                android:id="@+id/tv_timeShipment"
                style="@style/TextView_style"
                android:layout_marginLeft="60dp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_marginRight="18dp"
            android:layout_marginLeft="18dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d8d8d8" />

        <LinearLayout
            style="@style/Layout_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <TextView
                style="@style/TextView_style"
                android:text="申报人姓名" />

            <TextView
                android:id="@+id/tv_userName"
                style="@style/TextView_style"
                android:layout_marginLeft="30dp"
                android:textStyle="bold" />
        </LinearLayout>
        <View
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d8d8d8" />

        <LinearLayout
            style="@style/Layout_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <TextView
                style="@style/TextView_style"
                android:text="报检员姓名" />

            <TextView
                android:id="@+id/tv_idmName"
                style="@style/TextView_style"
                android:layout_marginLeft="30dp"
                android:textStyle="bold" />
        </LinearLayout>
        <View
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d8d8d8" />

        <LinearLayout
            style="@style/Layout_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <TextView
                style="@style/TextView_style"
                android:text="动物种类" />

            <TextView
                android:id="@+id/tv_animType"
                style="@style/TextView_style"
                android:layout_marginLeft="30dp"
                android:textStyle="bold" />
        </LinearLayout>
        <View
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d8d8d8" />

        <LinearLayout
            style="@style/Layout_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <TextView
                style="@style/TextView_style"
                android:text="数量及单位" />

            <TextView
                android:id="@+id/tv_numberUnit"
                style="@style/TextView_style"
                android:layout_marginLeft="30dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>
