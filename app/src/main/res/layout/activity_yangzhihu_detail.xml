<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <com.wyw.jiangsu.view.photoview.PhotoView
            android:id="@+id/parent_photo_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:orientation="vertical">

            <include layout="@layout/view_title" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/Layout_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="0dp">

                        <RelativeLayout style="@style/Layout_style">

                            <ImageView
                                android:id="@+id/img_q"
                                style="@style/Image_style_relayout"
                                android:src="@drawable/declarer" />

                            <TextView
                                android:id="@+id/tv_q"
                                style="@style/TextView_style_relayout"
                                android:layout_toRightOf="@+id/img_q"
                                android:drawablePadding="3dp"
                                android:text="养殖场\n(户)名称" />


                            <EditText
                                android:id="@+id/yzhname"
                                style="@style/EditText_style_relayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/tv_q"
                                android:focusable="false" />


                        </RelativeLayout>

                        <View style="@style/Line_style" />


                        <RelativeLayout style="@style/Layout_style">

                            <ImageView
                                android:id="@+id/img_q_1"
                                style="@style/Image_style_relayout"
                                android:src="@drawable/contact_way" />

                            <TextView
                                android:id="@+id/tv_q_1"
                                style="@style/TextView_style_relayout"
                                android:layout_toRightOf="@+id/img_q_1"
                                android:drawablePadding="3dp"
                                android:text="联系电话" />


                            <EditText
                                android:id="@+id/phone"
                                style="@style/EditText_style_relayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/tv_q_1"
                                android:focusable="false" />


                        </RelativeLayout>

                        <View style="@style/Line_style" />

                        <RelativeLayout
                            style="@style/Layout_style"
                            android:focusable="true"
                            android:focusableInTouchMode="true">

                            <ImageView
                                android:id="@+id/img_7"
                                style="@style/Image_style_relayout"
                                android:src="@drawable/origin" />

                            <TextView
                                android:id="@+id/tv_5"
                                style="@style/TextView_style_relayout"
                                android:layout_marginRight="28dp"
                                android:layout_toRightOf="@+id/img_7"
                                android:text="地址" />

                            <TextView
                                android:id="@+id/dz"
                                style="@style/TextView_style_relayout"
                                android:layout_alignParentLeft="false"
                                android:layout_alignParentRight="true"
                                android:layout_toRightOf="@+id/tv_5"
                                android:drawablePadding="12dp"
                                android:drawableRight="@drawable/go_focus"
                                android:gravity="right|center"
                                android:textColor="#000000" />

                        </RelativeLayout>

                        <View style="@style/Line_style" />

                        <RelativeLayout style="@style/Layout_style">

                            <ImageView
                                android:id="@+id/img_q_2"
                                style="@style/Image_style_relayout"
                                android:src="@drawable/animal_species" />

                            <TextView
                                android:id="@+id/tv_q_2"
                                style="@style/TextView_style_relayout"
                                android:layout_toRightOf="@+id/img_q_2"
                                android:drawablePadding="3dp"
                                android:text="场所类型" />


                            <EditText
                                android:id="@+id/yzhlx"
                                style="@style/EditText_style_relayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/tv_q_2"
                                android:focusable="false" />


                        </RelativeLayout>

                        <View style="@style/Line_style" />

                        <RelativeLayout style="@style/Layout_style">

                            <ImageView
                                android:id="@+id/img_q_3"
                                style="@style/Image_style_relayout"
                                android:src="@drawable/quantity_unit" />

                            <TextView
                                android:id="@+id/tv_q_3"
                                style="@style/TextView_style_relayout"
                                android:layout_toRightOf="@+id/img_q_3"
                                android:drawablePadding="3dp"
                                android:text="现存栏量" />


                            <EditText
                                android:id="@+id/number"
                                style="@style/EditText_style_relayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="false"
                                android:layout_toLeftOf="@+id/numleixing"
                                android:layout_toRightOf="@+id/tv_q_3"
                                android:focusable="false"
                                android:inputType="number" />

                            <TextView
                                android:id="@+id/numleixing"
                                style="@style/TextView_style_relayout"
                                android:layout_alignParentRight="true" />


                        </RelativeLayout>

                        <View style="@style/Line_style" />

                        <RelativeLayout style="@style/Layout_style">

                            <ImageView
                                android:id="@+id/img_q_4"
                                style="@style/Image_style_relayout"
                                android:src="@drawable/declarer" />

                            <TextView
                                android:id="@+id/tv_q_4"
                                style="@style/TextView_style_relayout"
                                android:layout_toRightOf="@+id/img_q_4"
                                android:drawablePadding="3dp"
                                android:text="姓名" />


                            <EditText
                                android:id="@+id/name"
                                style="@style/EditText_style_relayout"
                                android:layout_marginLeft="60dp"
                                android:layout_toRightOf="@+id/tv_q_4"
                                android:focusable="false" />


                        </RelativeLayout>

                        <View style="@style/Line_style" />

                        <RelativeLayout style="@style/Layout_style">

                            <ImageView
                                android:id="@+id/img_q_5"
                                style="@style/Image_style_relayout"
                                android:src="@drawable/card_number" />

                            <TextView
                                android:id="@+id/tv_q_5"
                                style="@style/TextView_style_relayout"
                                android:layout_toRightOf="@+id/img_q_5"
                                android:drawablePadding="3dp"
                                android:text="身份证号" />


                            <EditText
                                android:id="@+id/shenfennum"
                                style="@style/EditText_style_relayout"
                                android:layout_toRightOf="@+id/tv_q_5"
                                android:focusable="false" />


                        </RelativeLayout>

                        <View style="@style/Line_style" />

                        <RelativeLayout style="@style/Layout_style">

                            <ImageView
                                android:id="@+id/img_q_6"
                                style="@style/Image_style_relayout"
                                android:src="@drawable/card" />

                            <TextView
                                android:id="@+id/tv_q_6"
                                style="@style/TextView_style_relayout"
                                android:layout_toRightOf="@+id/img_q_6"
                                android:drawablePadding="3dp"
                                android:text="一卡通号" />


                            <EditText
                                android:id="@+id/yikanum"
                                style="@style/EditText_style_relayout"
                                android:layout_toRightOf="@+id/tv_q_6"
                                android:focusable="false" />


                        </RelativeLayout>

                        <View style="@style/Line_style" />

                        <RelativeLayout
                            style="@style/Layout_style"
                            android:focusable="true"
                            android:focusableInTouchMode="true">

                            <ImageView
                                android:id="@+id/img_16"
                                style="@style/Image_style_relayout"
                                android:src="@drawable/time" />

                            <TextView
                                android:id="@+id/tv_15"
                                style="@style/TextView_style_relayout"
                                android:layout_toRightOf="@+id/img_16"
                                android:text="申报时间" />


                            <TextView
                                android:id="@+id/date"
                                style="@style/TextView_style_relayout"
                                android:layout_alignParentRight="true"
                                android:layout_toRightOf="@+id/tv_15"
                                android:drawableRight="@drawable/choose_time_focus"
                                android:gravity="right|center" />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_take_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#dcdcdc" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="51dp"
                            android:background="#ffffff"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#dcdcdc" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="11dp"
                                android:gravity="center"
                                android:text="身份证和一卡通号照片"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/img_takephoto_ic_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:src="@drawable/take_pictures" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#dcdcdc" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#dcdcdc" />

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <com.wyw.jiangsu.view.FullPhotoView
                                    android:id="@+id/photo_view_group_photo"
                                    android:layout_width="match_parent"
                                    android:layout_height="198dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:adjustViewBounds="true"
                                    android:background="#f7f7f7"
                                    android:minHeight="170dp"
                                    android:scaleType="fitXY" />

                                <ImageView
                                    android:id="@+id/iv_none"
                                    android:layout_width="33dp"
                                    android:layout_height="35dp"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/none"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="#dcdcdc" />
                        </LinearLayout>

                    </LinearLayout>

                    <TableLayout
                        android:id="@+id/tl_anim"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp">

                        <TableRow>

                            <TextView
                                style="@style/TextView_style"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:minHeight="50dp"
                                android:text="病死动物类型" />


                            <TextView
                                style="@style/TextView_style"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:minHeight="50dp"
                                android:text="死亡数" />


                            <TextView
                                style="@style/TextView_style"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:minHeight="50dp"
                                android:text="参保数" />

                        </TableRow>

                        <TableRow
                            android:id="@+id/table_row_anim_detil"
                            android:tag="notRequired">


                            <EditText
                                android:id="@+id/anmilzl"
                                style="@style/EditText_style"
                                android:layout_width="0dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:drawableRight="@drawable/drop_down_focus"
                                android:focusable="false" />


                            <EditText
                                android:id="@+id/swnum"
                                style="@style/EditText_style"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:digits="0123456789"
                                android:focusable="false"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="6"
                                android:maxLines="5" />


                            <EditText
                                android:id="@+id/cbnum"
                                style="@style/EditText_style"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:digits="0123456789"
                                android:focusable="false"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="6"
                                android:maxLines="5" />

                        </TableRow>

                        <TextView
                            android:id="@+id/tv_row_anim_detil_bottom"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/cuxian"
                            android:visibility="gone" />
                    </TableLayout>

                    <LinearLayout
                        style="@+id/Layout_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="11dp"
                        android:background="#ffffff"
                        android:orientation="vertical">

                        <RelativeLayout
                            style="@style/Layout_style"
                            android:focusable="true"
                            android:focusableInTouchMode="true">

                            <ImageView
                                android:id="@+id/img_22"
                                style="@style/Image_style_relayout"
                                android:src="@drawable/ear_label" />

                            <TextView
                                android:id="@+id/tv_22"
                                style="@style/TextView_style_relayout"
                                android:layout_toRightOf="@+id/img_22"
                                android:text="病死畜禽耳标号" />

                        </RelativeLayout>

                        <EditText
                            android:id="@+id/erbiao"
                            style="@style/StyleTextExr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:layout_marginTop="24dp"
                            android:focusable="false"
                            android:gravity="top|left"
                            android:minHeight="160dp"
                            android:padding="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="0dp">

                        <RelativeLayout style="@style/Layout_style">

                            <ImageView
                                android:id="@+id/img_2"
                                style="@style/Image_style_relayout"
                                android:src="@drawable/cause_death" />

                            <TextView
                                android:id="@+id/tv_sw"
                                style="@style/TextView_style_relayout"
                                android:layout_marginRight="20dp"
                                android:layout_toRightOf="@+id/img_2"
                                android:text="死亡原因" />


                            <EditText
                                android:id="@+id/bignyin"
                                style="@style/EditText_style_relayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/tv_sw"
                                android:focusable="false" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ll_feizhangchang"
                            style="@style/Layout_style"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/img_2_1"
                                style="@style/Image_style_relayout"
                                android:src="@drawable/cause_death" />

                            <TextView
                                android:id="@+id/tv_sw_1"
                                style="@style/TextView_style_relayout"
                                android:layout_toRightOf="@+id/img_2_1"
                                android:text="非正常死亡原因" />


                            <EditText
                                android:id="@+id/feizhengchang_death"
                                style="@style/EditText_style_relayout"
                                android:layout_toRightOf="@+id/tv_sw_1"
                                android:focusable="false" />


                        </RelativeLayout>

                        <RelativeLayout
                            style="@style/Layout_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/img_9"
                                style="@style/Image_style_relayout"
                                android:src="@drawable/handling" />

                            <TextView
                                android:id="@+id/tv_7"
                                style="@style/TextView_style_relayout"
                                android:layout_toRightOf="@+id/img_9"
                                android:text="处理方式" />

                            <ImageView
                                android:layout_width="6dp"
                                android:layout_height="7dp"
                                android:layout_marginBottom="26dp"
                                android:layout_marginRight="88dp"
                                android:layout_marginTop="28dp"
                                android:layout_toRightOf="@+id/tv_7" />

                            <TextView
                                android:id="@+id/spinner_process_method"
                                style="@style/TextView_style_relayout"
                                android:layout_alignParentLeft="false"
                                android:layout_alignParentRight="true"
                                android:drawableRight="@drawable/drop_down_drawable"
                                android:gravity="right|center"
                               />

                        </RelativeLayout>

                        <RelativeLayout style="@style/Layout_style">

                            <ImageView
                                android:id="@+id/img_2_2"
                                style="@style/Image_style_relayout"
                                android:src="@drawable/cause_death" />

                            <TextView
                                android:id="@+id/tv_sw_2"
                                style="@style/TextView_style_relayout"
                                android:layout_marginRight="20dp"
                                android:layout_toRightOf="@+id/img_2_2"
                                android:text="处理方式" />


                            <EditText
                                android:id="@+id/et_cl_method"
                                style="@style/EditText_style_relayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/tv_sw_2"
                                android:focusable="false" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/lin_tvqian"
                            style="@style/Layout_style"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:id="@+id/img_q_7"
                                style="@style/Image_style_relayout"
                                android:src="@drawable/fill_add" />

                            <TextView
                                android:id="@+id/tv_q_7"
                                style="@style/TextView_style_relayout"
                                android:layout_toRightOf="@+id/img_q_7"
                                android:drawablePadding="3dp"
                                android:text="乡镇站签名" />


                            <EditText
                                android:id="@+id/tv_qianming"
                                style="@style/EditText_style_relayout"
                                android:layout_toRightOf="@+id/tv_q_7"
                                android:focusable="false" />


                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_qianimg"
                        style="@style/Layout_style"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical"
                        android:padding="0dp">

                        <LinearLayout
                            style="@style/Layout_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                style="@style/TextView_style"
                                android:text="畜主/养殖场负责人签名" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <View style="@style/Line_style" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.wyw.jiangsu.view.FullPhotoView
                                android:id="@+id/chuzhuqianzhi"
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:scaleType="fitXY" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
