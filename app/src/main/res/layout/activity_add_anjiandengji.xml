<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/Layout_style"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/img_17"
                style="@style/Image_style_relayout"
                android:src="@drawable/star_time" />

            <TextView
                android:id="@+id/tv_16"
                style="@style/TextView_style_relayout"
                android:layout_toRightOf="@+id/img_17"
                android:text="登记时间" />


            <TextView
                android:id="@+id/tv_date"
                style="@style/TextView_style_relayout"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_16"
                android:drawableRight="@drawable/choose_time_down"
                android:gravity="center|left"
                android:text="1990/12/1" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="#d8d8d8" />

        <RelativeLayout style="@style/Layout_style">

            <ImageView
                android:id="@+id/imageView"
                style="@style/Image_style_relayout"
                android:src="@drawable/cause" />

            <TextView
                android:id="@+id/tv_3"
                style="@style/TextView_style_relayout"
                android:layout_toRightOf="@+id/imageView"
                android:text="案由" />

            <EditText
                android:id="@+id/et_anyou"
                style="@style/EditText_style_relayout"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/tv_3"
                android:gravity="center" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="#d8d8d8" />

        <RelativeLayout style="@style/Layout_style">

            <ImageView
                android:id="@+id/imageView4"
                style="@style/Image_style_relayout"
                android:src="@drawable/declarer" />

            <TextView
                android:id="@+id/tv_292"
                style="@style/TextView_style_relayout"
                android:layout_toRightOf="@+id/imageView4"
                android:text="办案人员" />


            <EditText
                android:id="@+id/et_people"
                style="@style/EditText_style_relayout"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="false"
                android:layout_marginLeft="24dp"
                android:layout_toLeftOf="@+id/bt_xuanze"
                android:layout_toRightOf="@+id/tv_292"
                android:focusable="false" />

            <Button
                android:id="@+id/bt_xuanze"
                android:layout_width="71dp"
                android:layout_height="23dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@drawable/select_bg"
                android:text="选择"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="#d8d8d8" />

        <RelativeLayout style="@style/Layout_style">

            <ImageView
                android:id="@+id/img_7"
                style="@style/Image_style_relayout"
                android:src="@drawable/source" />

            <TextView
                android:id="@+id/tv_5"
                style="@style/TextView_style_relayout"
                android:layout_marginRight="28dp"
                android:layout_toRightOf="@+id/img_7"
                android:text="来源" />

            <TextView
                android:id="@+id/sp_takeToMeasures"
                style="@style/TextView_style_relayout"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/tv_5"
                android:drawablePadding="12dp"
                android:drawableRight="@drawable/drop_down_drawable"
                android:gravity="right|center"
                android:text="请选择"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="#d8d8d8" />

        <RelativeLayout style="@style/Layout_style">

            <ImageView
                android:id="@+id/img_8"
                style="@style/Image_style_relayout"
                android:src="@drawable/case_type" />

            <TextView
                android:id="@+id/tv_8"
                style="@style/TextView_style_relayout"
                android:layout_marginRight="28dp"
                android:layout_toRightOf="@+id/img_8"
                android:text="案件类型" />

            <TextView
                android:id="@+id/sp_anjian"
                style="@style/TextView_style_relayout"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/tv_8"
                android:drawablePadding="12dp"
                android:drawableRight="@drawable/drop_down_drawable"
                android:gravity="right|center"
                android:text="请选择"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="#d8d8d8" />
    </LinearLayout>

    <Button
        android:layout_marginTop="17dp"
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="31dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:inputType="number"
        android:text="保存"
        android:textColor="#fffefe"
        android:textSize="@dimen/common_text_size" />

</LinearLayout>
