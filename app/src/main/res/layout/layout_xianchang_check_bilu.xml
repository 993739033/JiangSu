<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <ScrollView
        android:id="@+id/SV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/Layout_style"
            android:background="@color/background"
            android:orientation="vertical"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    style="@style/Layout_style"
                    android:focusable="true"
                    android:focusableInTouchMode="true">


                    <TextView
                        android:id="@+id/tv_5"
                        style="@style/TextView_style_relayout"
                        android:layout_alignParentLeft="true"
                        android:text="选择案件" />

                    <TextView
                        android:id="@+id/bt_xuanze_wenjian"
                        style="@style/TextView_style_relayout"
                        android:layout_alignParentLeft="false"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@+id/tv_5"
                        android:drawablePadding="12dp"
                        android:drawableRight="@drawable/go"
                        android:gravity="right|center"
                        android:textColor="#000000" />

                </RelativeLayout>

                <View style="@style/Line_style" />

                <RelativeLayout
                    style="@style/Layout_style"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <ImageView
                        android:id="@+id/img_16"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/time" />

                    <TextView
                        android:id="@+id/tv_15"
                        style="@style/TextView_style_relayout"
                        android:layout_toRightOf="@+id/img_16"
                        android:text="时间段" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@+id/tv_15"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_date"
                            style="@style/TextView_style_relayout"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="10dp"
                            android:drawableRight="@drawable/choose_time_down"
                            android:gravity="right|center" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_timefrom"
                                style="@style/TextView_style_relayout"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:drawableRight="@drawable/drop_down2"
                                android:gravity="right|center" />

                            <TextView
                                style="@style/TextView_style_relayout"
                                android:text="至" />

                            <TextView
                                android:id="@+id/tv_timeto"
                                style="@style/TextView_style_relayout"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:drawableRight="@drawable/drop_down2"
                                android:gravity="right|center" />
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout style="@style/Layout_style">

                    <ImageView
                        android:id="@+id/img_q_1"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/origin" />

                    <TextView
                        android:id="@+id/tv_q_1"
                        style="@style/TextView_style_relayout"
                        android:layout_toRightOf="@+id/img_q_1"
                        android:drawableRight="@drawable/required"
                        android:text="检查地点" />


                    <EditText
                        android:id="@+id/et_check_didian"
                        style="@style/EditText_style_relayout"
                        android:layout_toRightOf="@+id/tv_q_1" />


                </RelativeLayout>

                <View style="@style/Line_style" />

                <RelativeLayout style="@style/Layout_style">

                    <ImageView
                        android:id="@+id/img_q_2"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/ask_authority" />

                    <TextView
                        android:id="@+id/tv_q_2"
                        style="@style/TextView_style_relayout"
                        android:layout_toRightOf="@+id/img_q_2"
                        android:drawableRight="@drawable/required"
                        android:text="询问机关" />


                    <EditText
                        android:id="@+id/et_xunwen_jiguan"
                        style="@style/EditText_style_relayout"
                        android:layout_toRightOf="@+id/tv_q_2" />


                </RelativeLayout>

                <View style="@style/Line_style" />

                <RelativeLayout style="@style/Layout_style">

                    <ImageView
                        android:id="@+id/img_q_4"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/declarer" />

                    <TextView
                        android:id="@+id/tv_q_4"
                        style="@style/TextView_style_relayout"
                        android:layout_toRightOf="@+id/img_q_4"
                        android:drawableRight="@drawable/required"
                        android:text="当事人" />


                    <EditText
                        android:id="@+id/et_dangshiren"
                        style="@style/EditText_style_relayout"
                        android:layout_marginLeft="46dp"
                        android:layout_toRightOf="@+id/tv_q_4" />


                </RelativeLayout>

                <View style="@style/Line_style" />

                <RelativeLayout style="@style/Layout_style">

                    <ImageView
                        android:id="@+id/img_q_3"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/inspection_office" />

                    <TextView
                        android:id="@+id/tv_q_3"
                        style="@style/TextView_style_relayout"
                        android:layout_toRightOf="@+id/img_q_3"
                        android:drawableRight="@drawable/required"
                        android:text="检查机关" />


                    <EditText
                        android:id="@+id/et_check_jiguan"
                        style="@style/EditText_style_relayout"
                        android:layout_toRightOf="@+id/tv_q_3" />


                </RelativeLayout>

                <View style="@style/Line_style" />

                <RelativeLayout style="@style/Layout_style">

                    <ImageView
                        android:id="@+id/img_q_5"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/declarer" />

                    <TextView
                        android:id="@+id/tv_q_5"
                        style="@style/TextView_style_relayout"
                        android:layout_toRightOf="@+id/img_q_5"
                        android:text="检查人员1" />


                    <EditText
                        android:id="@+id/et_check_renyuan1"
                        style="@style/EditText_style_relayout"
                        android:layout_alignParentRight="false"
                        android:layout_marginLeft="24dp"
                        android:layout_toLeftOf="@+id/bt_check_renyuan"
                        android:layout_toRightOf="@+id/tv_q_5"
                        android:focusable="false" />

                    <Button
                        android:id="@+id/bt_check_renyuan"
                        android:layout_width="71dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/select_bg"
                        android:text="选择"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                </RelativeLayout>

                <View style="@style/Line_style" />

                <RelativeLayout style="@style/Layout_style">

                    <ImageView
                        android:id="@+id/img_q_6"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/declaration_number" />

                    <TextView
                        android:id="@+id/tv_q_6"
                        style="@style/TextView_style_relayout"
                        android:layout_toRightOf="@+id/img_q_6"
                        android:text="执法证件号1" />


                    <EditText
                        android:id="@+id/et_zhifa_zhengjianhao1"
                        style="@style/EditText_style_relayout"
                        android:layout_toRightOf="@+id/tv_q_6"
                        android:focusable="false" />

                </RelativeLayout>

                <View style="@style/Line_style" />

                <RelativeLayout style="@style/Layout_style">

                    <ImageView
                        android:id="@+id/img_q_8"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/declarer" />

                    <TextView
                        android:id="@+id/tv_q_8"
                        style="@style/TextView_style_relayout"
                        android:layout_toRightOf="@+id/img_q_8"
                        android:text="检查人员2" />


                    <EditText
                        android:id="@+id/et_check_renyuan2"
                        style="@style/EditText_style_relayout"
                        android:layout_marginLeft="24dp"
                        android:layout_toRightOf="@+id/tv_q_8"
                        android:focusable="false" />

                </RelativeLayout>

                <View style="@style/Line_style" />

                <RelativeLayout style="@style/Layout_style">

                    <ImageView
                        android:id="@+id/img_q_9"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/declaration_number" />

                    <TextView
                        android:id="@+id/tv_q_9"
                        style="@style/TextView_style_relayout"
                        android:layout_toRightOf="@+id/img_q_9"
                        android:text="执法证件号2" />


                    <EditText
                        android:id="@+id/et_zhifa_zhengjianhao2"
                        style="@style/EditText_style_relayout"
                        android:layout_toRightOf="@+id/tv_q_9"
                        android:focusable="false" />

                </RelativeLayout>

                <View style="@style/Line_style" />

                <RelativeLayout style="@style/Layout_style">

                    <ImageView
                        android:id="@+id/img_q_10"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/declarer" />

                    <TextView
                        android:id="@+id/tv_q_10"
                        style="@style/TextView_style_relayout"
                        android:layout_toRightOf="@+id/img_q_10"
                        android:drawableRight="@drawable/required"
                        android:text="记录人" />


                    <EditText
                        android:id="@+id/et_jiluren"
                        style="@style/EditText_style_relayout"
                        android:layout_toRightOf="@+id/tv_q_10" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                style="@+id/Layout_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <RelativeLayout
                    style="@style/Layout_style"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <ImageView
                        android:id="@+id/img_22"
                        style="@style/Image_style_relayout"
                        android:src="@drawable/content" />

                    <TextView
                        android:id="@+id/tv_22"
                        style="@style/TextView_style_relayout"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/img_22"
                        android:layout_toRightOf="@+id/img_22"
                        android:drawableRight="@drawable/required"
                        android:text="现场检查（勘验）情况" />

                </RelativeLayout>

                <View style="@style/Line_style" />

                <EditText
                    android:id="@+id/et_check_qingkuang"
                    style="@style/EditText_style"
                    android:layout_width="match_parent"
                    android:layout_margin="18dp"
                    android:gravity="top|left"
                    android:hint="请输入"
                    android:inputType="textMultiLine"
                    android:minHeight="160dp"
                    android:padding="16dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/img_18"
                    android:text="带"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/img_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/tv_17"
                    android:background="@drawable/required" />

                <TextView
                    android:id="@+id/tv_17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="14dp"
                    android:text="为必填项"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/bt_baocun"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="31dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_style"
                android:gravity="center"
                android:text="保存"
                android:textColor="#fffefe"
                android:textSize="@dimen/common_text_size" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>