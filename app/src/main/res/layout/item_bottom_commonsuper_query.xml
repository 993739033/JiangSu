<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        style="@style/Line_style"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="0dp" />

    <LinearLayout style="@style/Layout_style">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                style="@style/TextView_style"
                android:drawableLeft="@drawable/other"
                android:text="其他:" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_other"
            style="@style/EditText_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="无" />
    </LinearLayout>
    <!-- <include layout="@layout/view_split_vertical" />-->
    <View
        style="@style/Line_style"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="0dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            style="@style/Layout_style"
            android:gravity="center"
            >
            <TextView
                style="@style/TextView_style"
                android:text="合照"
                />

            <ImageView
                android:id="@+id/img_group_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:src="@drawable/group_photo" />
        </LinearLayout>
        <View
            style="@style/Line_style"/>
        <FrameLayout
            style="@style/Layout_style"
            android:minHeight="200dp"
            android:gravity="center"
            >

            <ImageView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/none"
                />
            <com.wyw.jiangsu.view.FullPhotoView
                android:id="@+id/photo_view_group_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="200dp"
                />
        </FrameLayout>
    </LinearLayout>

    <include layout="@layout/view_check_person_sign" />

    <View style="@style/Line_style" />

    <LinearLayout style="@style/Layout_style">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/bt_sign_check1"
                style="@style/TextView_style"
                android:drawableLeft="@drawable/representative"
                android:text="检查人员签字1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_sign_check1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input">

            <com.wyw.jiangsu.view.FullPhotoView
                android:id="@+id/img_sign_check1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/Line_style" />

    <LinearLayout style="@style/Layout_style">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/bt_sign_check2"
                style="@style/TextView_style"

                android:drawableLeft="@drawable/representative"
                android:text="检查人员签字2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_sign_check2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input">

            <com.wyw.jiangsu.view.FullPhotoView
                android:id="@+id/img_sign_check2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/Line_style" />

    <LinearLayout style="@style/Layout_style">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/bt_sign_first"
                style="@style/TextView_style"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/representative"
                android:text="签字" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_sign_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input">

            <com.wyw.jiangsu.view.FullPhotoView
                android:id="@+id/img_sign_first"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/Line_style" />

    <LinearLayout
        style="@style/Layout_style"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/bt_sign_second"
                style="@style/TextView_style"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/representative"
                android:text="签字2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_sign_second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/input">

            <com.wyw.jiangsu.view.FullPhotoView
                android:id="@+id/img_sign_second"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/Layout_style"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/bt_date"
                style="@style/TextView_style"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/time1"
                android:text="时间" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableRight="@drawable/selector_choose_time"
            android:focusable="false" />

    </LinearLayout>

    <include layout="@layout/view_split_vertical" />

    <LinearLayout
        style="@style/Layout_style"
        android:background="#d8d8d8">

        <Button
            android:id="@+id/upload"
            style="@style/Button_style"
            android:layout_margin="0dp"
            android:text="上  传" />
    </LinearLayout>


</LinearLayout>