<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <include layout="@layout/view_title" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <Button
        android:id="@+id/btn_syjy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="兽药经营"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_margin="10dp"

        />
    <Button
        android:id="@+id/btn_tzc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="动物屠宰场"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/btn_dwzlc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="动物诊疗机构"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/btn_whh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="无害化处理场"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/btn_slsc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="饲料生产企业"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/btn_sysc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="兽药生产企业"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/btn_dwyzc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="动物养殖场"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/btn_sxr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="生鲜乳收购站"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_margin="10dp"
        />
    </LinearLayout>
    </ScrollView>
</LinearLayout>