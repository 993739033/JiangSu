<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#efefef">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/Layout_style">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextView_style"
                        android:drawableLeft="@drawable/certificate_number"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/required"
                        android:text="检疫证编号" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_quarantine_no"
                    style="@style/EditText_style"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:focusable="false" />
            </LinearLayout>

            <View style="@style/Line_style" />

            <LinearLayout style="@style/Layout_style">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextView_style"
                        android:drawableLeft="@drawable/carrier"
                        android:drawablePadding="10dp"
                        android:text="货主" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_user_name"
                    style="@style/EditText_style"
                    android:layout_width="0dp"
                    android:layout_gravity="right"
                    android:layout_weight="1" />
            </LinearLayout>

            <View style="@style/Line_style" />

            <LinearLayout
                style="@style/Layout_style"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        style="@style/TextView_style"
                        android:drawableLeft="@drawable/contact_way"
                        android:drawablePadding="10dp"
                        android:text="联系电话" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_user_phone"
                    style="@style/EditText_style"
                    android:layout_width="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <View style="@style/Line_style" />

            <LinearLayout
                style="@style/Layout_style"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView2"
                        style="@style/TextView_style"
                        android:drawableLeft="@drawable/animal_species"
                        android:drawablePadding="10dp"
                        android:text="动物种类" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/tv_anim_type"
                        style="@style/TextView_style"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/image_drop_down"
                        android:text="请选择" />

                </LinearLayout>
            </LinearLayout>

            <View style="@style/Line_style" />

            <LinearLayout
                style="@style/Layout_style"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        style="@style/TextView_style"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/quantity_unit"
                        android:drawablePadding="10dp"
                        android:text="数量" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/et_anim_count"
                        style="@style/EditText_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_danwei"
                        style="@style/TextView_style"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/image_drop_down"
                        android:text="头" />

                </LinearLayout>
            </LinearLayout>

            <View style="@style/Line_style" />

            <LinearLayout
                style="@style/Layout_style"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        style="@style/TextView_style"
                        android:drawableLeft="@drawable/source_uses"
                        android:drawablePadding="10dp"
                        android:text="用途" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_purpose"
                        style="@style/TextView_style"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/image_drop_down"
                        android:text="" />

                </LinearLayout>
            </LinearLayout>

            <View style="@style/Line_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/Layout_style"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/TextView_style"
                            android:layout_marginLeft="8dp"
                            android:drawableLeft="@drawable/origin"
                            android:drawablePadding="10dp"
                            android:text="起运地" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/tv_start_place"
                            style="@style/TextView_style"
                            android:drawablePadding="10dp"
                            android:drawableRight="@drawable/image_go_select"
                            android:text="" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/Layout_style"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextView_style"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/fill_add"
                        android:drawablePadding="10dp" />

                    <EditText
                        android:id="@+id/et_start_place"
                        style="@style/EditText_style"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        />

                </LinearLayout>

            </LinearLayout>

            <View style="@style/Line_style" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/Layout_style"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            style="@style/TextView_style"
                            android:layout_marginLeft="8dp"
                            android:drawableLeft="@drawable/origin"
                            android:drawablePadding="10dp"
                            android:text="到达地" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/tv_end_place"
                            style="@style/TextView_style"
                            android:drawablePadding="10dp"
                            android:drawableRight="@drawable/image_go_select"
                            android:text="" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/Layout_style"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextView_style"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/fill_add"
                        android:drawablePadding="10dp" />

                    <EditText
                        android:id="@+id/et_end_place"
                        style="@style/EditText_style"
                        android:layout_width="0dp"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>

            <View style="@style/Line_style" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/Layout_style"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextView_style"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/ear_label"
                        android:drawablePadding="10dp"
                        android:text="耳标号" />
                </LinearLayout>

                <LinearLayout
                    style="@style/Layout_style"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_erbiao"
                        style="@style/EditText_style"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:focusable="false"
                        android:gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout style="@style/Layout_style">

                    <Button
                        android:id="@+id/btn_erbiao"
                        style="@style/Button_style"
                        android:text="耳标录入" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/sqt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/Layout_style">

                    <TextView
                        style="@style/TextView_style"
                        android:layout_width="match_parent"
                        android:text="本批动物经检疫合格，应于本日内到达有效。" />
                </LinearLayout>

                <View style="@style/Line_style" />

                <LinearLayout
                    style="@style/Layout_style"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextView_style"
                            android:layout_marginLeft="10dp"
                            android:drawableLeft="@drawable/veterinarian"
                            android:drawablePadding="10dp"
                            android:drawableRight="@drawable/required"
                            android:text="官方兽医签字" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_signature_checked"
                        style="@style/EditText_style"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:focusable="false" />
                </LinearLayout>

                <View style="@style/Line_style" />

                <LinearLayout style="@style/Layout_style">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextView_style"
                            android:layout_marginLeft="10dp"
                            android:drawableLeft="@drawable/issue_date"
                            android:drawablePadding="10dp"
                            android:text="签发日期" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/et_prove_time"
                            style="@style/TextView_style"
                            android:drawablePadding="10dp"
                            android:drawableRight="@drawable/selector_choose_time"
                            android:text="" />

                    </LinearLayout>
                </LinearLayout>

                <View style="@style/Line_style" />

            </LinearLayout>

            <LinearLayout
                style="@style/Layout_style"
                android:background="#efefef"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextView_style"
                    android:layout_margin="0dp"
                    android:drawableRight="@drawable/required"
                    android:padding="0dp"
                    android:text="带" />

                <TextView
                    style="@style/TextView_style"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="为必填项" />

            </LinearLayout>

            <Button
                android:id="@+id/bt_print"
                style="@style/Button_style"
                android:text="保存" />

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/view_title" />

</LinearLayout>
