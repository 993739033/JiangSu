<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        style="@style/Layout_style">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/TextView_style"
            android:drawableLeft="@drawable/opinion"
            android:text="检查处理意见:"/>
        </LinearLayout>
        <EditText
            android:maxLength="200"
            android:id="@+id/et_check_advise"
            style="@style/EditText_style"
            android:layout_width="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
   <!-- <include layout="@layout/view_split_vertical"/>-->
    <View
        style="@style/Line_style"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="0dp"/>
    <LinearLayout
       style="@style/Layout_style"
        >
        <TextView
            style="@style/TextView_style"
            android:drawableLeft="@drawable/info2"
            android:text="监督检查人员"/>
    </LinearLayout>
    <include layout="@layout/view_split_vertical"/>
    <LinearLayout
        style="@style/Layout_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="姓名"/>

        <TextView
            style="@style/TextView_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="所在单位"/>

    </LinearLayout>

    <LinearLayout
        style="@style/Layout_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_name1"
            style="@style/EditText_style"
            android:layout_weight="3"
            android:focusable="false"
            />


        <EditText
            android:id="@+id/et_person_no1"
            style="@style/EditText_style"
            android:layout_weight="3"
            android:focusable="false"
            android:maxLength="30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Layout_style"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_name2"
            style="@style/EditText_style"
            android:layout_weight="3"

            />

        <EditText
            android:id="@+id/et_person_no2"
            style="@style/EditText_style"
            android:maxLength="30"
            android:layout_weight="3"/>

    </LinearLayout>
 <!--   <include layout="@layout/view_split_vertical"/>-->
</LinearLayout>