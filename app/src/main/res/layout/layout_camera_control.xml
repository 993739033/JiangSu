<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:paddingTop="@dimen/dialog_title_padding"
        android:paddingBottom="@dimen/dialog_title_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dialog_title_wordsize"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="选择来源地" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dadada" />

    <android.support.design.widget.TabLayout
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_tab_height"
        app:tabIndicatorColor="@color/tab_text_color"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/tab_text_color"
        app:tabTextColor="@color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dadada" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_viewpager_height" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dadada" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cancel"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_tab_height"
            android:layout_weight="1"
            android:text="取消"
            android:textSize="@dimen/dialog_title_wordsize"
            android:textColor="@color/black"/>
        <View
            android:layout_gravity="center"
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:background="#b9b9b9" />
        <TextView
            android:id="@+id/sure"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_tab_height"
            android:layout_weight="1"
            android:text="确定"
            android:textSize="@dimen/dialog_title_wordsize"
            android:textColor="@color/black"/>

    </LinearLayout>

</LinearLayout>